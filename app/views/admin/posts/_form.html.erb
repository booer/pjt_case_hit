<%= bootstrap_form_for [:admin, @post] do |e| %>
	<div class="form-group">
	<label>選擇語系 </label><br>
		<%= e.radio_button :status, 0, label: "中文", inline: true %>
	  <%= e.radio_button :status, 1, label: "英文", inline: true %>
  </div>
  <div class="form-group">
		<%= e.text_field :title %>
	</div>
	<div class="form-group">
	<%= e.text_area :content %>
	</div>
	
	<%= e.submit '送出' %>
<% end %>
