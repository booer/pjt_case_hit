<%= bootstrap_form_for [:admin, @product] do |e| %>
	<div class="form-group">
	<label>選擇語系 </label><br>
		<%= e.radio_button :status, 0, label: "中文", inline: true %>
	  <%= e.radio_button :status, 1, label: "英文", inline: true %>
  </div>
  <div class="form-group">
		<%= e.text_field :pname, label: '商品名稱' %>
	</div>
	<div class="form-group">
		<%= e.text_area :desc, label: '商品描述' %>
	</div>
	<%= e.submit '送出' %>
<% end %>